<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.ims.scene.MainView"
            prefHeight="400.0" prefWidth="600.0">

    <top>
        <!-- Button bar -->
        <HBox prefHeight="50.0" prefWidth="600.0" alignment="CENTER" BorderPane.alignment="CENTER">
            <children>
                <Button alignment="CENTER" contentDisplay="TOP" mnemonicParsing="false" prefHeight="25.0" prefWidth="94.0" text="Product" textAlignment="CENTER" onAction="#loadProductScene" />
                <Button mnemonicParsing="false" text="Supplier" />
                <Button mnemonicParsing="false" prefHeight="25.0" text="Order Item" />
                <Button mnemonicParsing="false" text="Order Made" />
            </children>
            <padding>
                <Insets left="10.0" right="10.0"/>
            </padding>
        </HBox>
    </top>

    <StackPane fx:id="contentPane">
        <!-- Content will be loaded dynamically here -->
    </StackPane>

</BorderPane>
