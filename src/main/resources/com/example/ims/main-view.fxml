<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.ims.scene.MainView">

    <top>
        <!-- Button bar -->
        <HBox alignment="CENTER" prefHeight="50.0" prefWidth="610.0" BorderPane.alignment="CENTER">
            <children>
                <Button alignment="CENTER" contentDisplay="TOP" mnemonicParsing="false" onAction="#loadProductScene" prefHeight="25.0" prefWidth="94.0" text="Product" textAlignment="CENTER" />
                <Button alignment="CENTER" contentDisplay="TOP" mnemonicParsing="false" onAction="#loadSupplierScene" text="Supplier" textAlignment="CENTER" />
                <Button alignment="CENTER" contentDisplay="TOP" mnemonicParsing="false" onAction="#loadOrderScene" prefHeight="25.0" text="Order" textAlignment="CENTER" />
            </children>
            <padding>
                <Insets left="10.0" right="10.0" />
            </padding>
        </HBox>
    </top>

    <center>
        <StackPane fx:id="contentPane" prefHeight="150.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <!-- Dynamically loaded scenes -->
            <!-- Also, main-view view-->
            <VBox alignment="CENTER" style="-fx-background-color: lightblue;">
                <Label style="-fx-font-size: 24; -fx-font-weight: bold;" text="Welcome" />
                <Label alignment="CENTER" style="-fx-font-size: 14" text="Description of what the application does" />
            </VBox>
        </StackPane>
    </center>


</BorderPane>
